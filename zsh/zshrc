if [ -z "$TMUX" ]; then # If we're not already in a tmux session
	if [ "$(tty)" != "/dev/tty1" ]; then # and we're not in tty1
		if tmux list-sessions; then # if there's a session, attach
			tmux attach-session -d
		else
			tmux # otherwise, create one
		fi
	fi
fi
